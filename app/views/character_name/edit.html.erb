<div class="section">
	<%= content_tag( 'h1', "#{link_to( @character.name, character_show_url( :character => @character ) )} - Edit Name".html_safe ) %>
</div>

<%= form_for @name, :url => { :action => 'update', :name_to_update => @name } do |f| %>
	<%= render :partial => 'form', :object => f %>
  	<%= submit_tag( 'Update', :class => 'submit' ) %>
<% end %>