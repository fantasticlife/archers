<div class="section">
	<%= content_tag( 'h1', "#{link_to( @storyline.title, storyline_show_url )} - Edit beat".html_safe ) %>
</div>

<%= form_for @beat, :url => { :action => 'update', :beat_to_update => @beat.guid } do |f| %>
	<%= render :partial => 'form', :object => f %>
  	<%= submit_tag( 'Update', :class => 'submit' ) %>
<% end %>