<div class="section">
	<%= content_tag( 'h1', "#{link_to( @occupation.label, occupation_show_url( :occupation => @occupation ) )} Edit".html_safe ) %>
</div>

<%= form_for @occupation, :url => { :action => 'update', :occupation_to_update => @occupation } do |f| %>
	<%= render :partial => 'form', :object => f %>
  	<%= submit_tag( 'Update', :class => 'submit' ) %>
<% end %>