<div class="section">
	<%= content_tag( 'h1', "#{@occupation.label} #{content_tag( 'span', link_to( 'Edit', occupation_edit_url))}".html_safe ) %>
</div>

<%= render :partial => 'characters', :object => @occupation unless @occupation.characters.empty? %>

<div class="section">
	<%= content_tag( 'h2', 'Delete' ) %>
	<%= form_for @occupation, :url => { :action => 'delete', :occupation => @occupation.guid } do |f| %>
		<%= submit_tag( 'Delete occupation', data: { confirm: 'Are you sure?' } ) %>
	<% end %>
</div>