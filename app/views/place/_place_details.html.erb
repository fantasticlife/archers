<table class="section">
	<% unless place_details.short_synopsis.blank? -%>
		<tr>
			<%= content_tag( 'th', 'Short synopsis:' ) %>
			<%= content_tag( 'td', place_details.short_synopsis ) %>
		</tr>
	<% end -%>
	<% unless place_details.long_synopsis.blank? -%>
		<tr>
			<%= content_tag( 'th', 'Long synopsis:' ) %>
			<%= content_tag( 'td', place_details.long_synopsis ) %>
		</tr>
	<% end -%>
	<% unless place_details.lat.blank? or place_details.lon.blank? -%>
		<tr>
			<%= content_tag( 'th', 'Latitude:' ) %>
			<%= content_tag( 'td', place_details.lat ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Longitude:' ) %>
			<%= content_tag( 'td', place_details.lon ) %>
		</tr>
	<% end -%>
	<% if place_details.parent_place -%>
		<tr>
			<%= content_tag( 'th', 'Is in:' ) %>
			<%= content_tag( 'td', link_to( place_details.parent_place.title, place_show_url( :place => place_details.parent_place.guid ) ) ) %>
		</tr>
	<% end -%>
	<% unless place_details.notes.blank? -%>
		<tr>
			<%= content_tag( 'th', 'Notes:' ) %>
			<%= content_tag( 'td', place_details.notes ) %>
		</tr>
	<% end -%>
</table>