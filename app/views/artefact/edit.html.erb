<div class="section">
	<%= content_tag( 'h1', "#{link_to( @artefact.title, artefact_show_url )} Edit".html_safe ) %>
</div>

<%= form_for @artefact, :url => { :action => 'update', :artefact_to_update => @artefact.guid } do |f| %>
	<%= render :partial => 'form', :object => f %>
  	<%= submit_tag( 'Update', :class => 'submit' ) %>
<% end %>