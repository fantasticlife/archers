<table>
	<tbody>
		<tr>
			<%= content_tag( 'th', 'Character:' ) %>
			<%= content_tag( 'td', link_to( membership_details.character.name, character_show_url( :character => membership_details.character ) ) ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Group:' ) %>
			<%= content_tag( 'td', link_to( membership_details.group.label, group_show_url( :group => membership_details.group ) ) ) %>
		</tr>
		<% if membership_details.membership_role -%>
			<tr>
				<%= content_tag( 'th', 'Membership role:' ) %>
				<%= content_tag( 'td', membership_details.membership_role.label ) %>
			</tr>
		<% end -%>
		<% if membership_details.start_date -%>
			<tr>
				<%= content_tag( 'th', 'Start date:' ) %>
				<%= content_tag( 'td', membership_details.start_date.strftime( '%d %B %Y' ) ) %>
			</tr>
		<% end -%>
		<% if membership_details.end_date -%>
			<tr>
				<%= content_tag( 'th', 'End date:' ) %>
				<%= content_tag( 'td', membership_details.end_date.strftime( '%d %B %Y' ) ) %>
			</tr>
		<% end -%>
	</tbody>
</table>