<div class="section">
	<%= content_tag( 'h1', "#{link_to( @scene.episode.display_title, episode_show_url( :episode => @scene.episode ) )} - #{link_to( "Scene #{@scene.segment_position}", scene_show_url( :scene => @scene ))} Edit".html_safe ) %>
</div>

<%= form_for @scene, :url => { :action => 'update', :scene_to_update => @scene } do |f| %>
	<%= render :partial => 'form', :object => f %>
  	<%= submit_tag( 'Update', :class => 'submit' ) %>
<% end %>