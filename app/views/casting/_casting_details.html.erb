<table>
	<tbody>
		<tr>
			<%= content_tag( 'th', 'Character:' ) %>
			<%= content_tag( 'td', link_to( casting_details.character.name, character_show_url( :character => casting_details.character ) ) ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Actor:' ) %>
			<%= content_tag( 'td', link_to( casting_details.actor.name, actor_show_url( :actor => casting_details.actor ) ) ) %>
		</tr>
		<% if casting_details.start_date -%>
			<tr>
				<%= content_tag( 'th', 'Start date:' ) %>
				<%= content_tag( 'td', casting_details.start_date.strftime( '%d %B %Y' ) ) %>
			</tr>
		<% end -%>
		<% if casting_details.end_date -%>
			<tr>
				<%= content_tag( 'th', 'End date:' ) %>
				<%= content_tag( 'td', casting_details.end_date.strftime( '%d %B %Y' ) ) %>
			</tr>
		<% end -%>
	</tbody>
</table>